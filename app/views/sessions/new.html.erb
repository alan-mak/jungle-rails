<header class="page-header">
  <h1>Login</h1>
</header>

<div class="col-sm-2">
  <%= form_tag '/login' do %>
    <div class="form-group">
    Email: <%= email_field_tag :email %>
    </div>
    <div class="form-group">
    Password: <%= password_field_tag :password %>
    </div>
    <div class="form-group">
    <%= submit_tag "Submit", class: "btn btn-info" %>
    </div>
  <% end %>
</div>